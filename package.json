{
  "name": "zana-gui",
  "version": "0.0.1",
  "description": "Zana GUI. Zana is Mason.nvim, but maintained by the community.",
  "main": "./out/main/index.js",
  "author": {
    "name": "Marco Kellershoff",
    "email": "marco@kellershoff.net"
  },
  "license": "MIT",
  "homepage": "https://tbint.de",
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck-node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "bun run typecheck-node && bun run svelte-check",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "bun run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build-unpack": "bun run build && electron-builder --dir",
    "build-windows": "bun run build && electron-builder --win --publish never",
    "build-macos": "PLATFORM=macos ./scripts/build.sh",
    "build-linux": "PLATFORM=linux ./scripts/build.sh",
    "build-linux-arm64": "PLATFORM=linux-arm64 ./scripts/build.sh",
    "build-linux-debug": "VERSION=0.0.0-debug PLATFORM=linux-debug ./scripts/build.sh",
    "node-packages-update": "ncu -u",
    "node-packages-upgrade": "ncu -u && bun install",
    "translations": "typesafe-i18n --no-watch",
    "translations-watch": "typesafe-i18n"
  },
  "dependencies": {
    "@electron-toolkit/preload": "3.0.1",
    "@electron-toolkit/utils": "3.0.0",
    "electron-settings": "4.0.4",
    "electron-updater": "6.3.9",
    "typesafe-i18n": "5.26.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@fortawesome/fontawesome-free": "6.7.2",
    "@mistweaverco/electron-notarize-async": "0.0.4",
    "@sveltejs/adapter-node": "5.2.9",
    "@sveltejs/vite-plugin-svelte": "3.1.2",
    "@types/adm-zip": "^0.5.7",
    "@types/bun": "^1.1.14",
    "adm-zip": "^0.5.16",
    "axios": "^1.7.9",
    "bulma": "1.0.2",
    "dotenv": "16.4.5",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-log": "5.2.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.41.0",
    "kit-monorepo": "github:sveltejs/kit",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.5",
    "svelte": "4.2.19",
    "svelte-awesome-color-picker": "3.1.4",
    "svelte-check": "3.8.6",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
